{
  "manifest_version": 2,
  "name": "no-np",
  "description": "Converts np links on reddit to regular links",
  "version": "1.0",

  "content_scripts": [{
    "matches": ["http://*.reddit.com/*","https://*.reddit.com/*"],
    "js": ["jquery-2.1.4.min.js","fixlinks.js"]
  }],

  "permissions": [
    "tabs",
    "http://*.reddit.com/*",
    "https://*.reddit.com/*"
  ],

  "icons": {
    "64": "no-np64.png",
    "48": "no-np48.png",
    "32": "no-np32.png",
    "16": "no-np16.png"
  }
}
