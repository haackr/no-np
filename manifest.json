{
  "manifest_version": 2,
  "name": "no-np",
  "description": "Converts np links on reddit to regular links",
  "version": "1.3.0",

  "content_scripts": [{
    "matches": ["http://*.reddit.com/*","https://*.reddit.com/*"],
    "js": ["fixlinks.js"]
  }],

  "permissions": [
    "tabs",
    "http://*.reddit.com/*",
    "https://*.reddit.com/*"
  ],

  "icons": {
    "128": "./icons/icon128.png",
    "64": "./icons/icon64.png",
    "48": "./icons/icon.png",
    "32": "./icons/icon32.png",
    "16": "./icons/icon16.png"
  }
}
